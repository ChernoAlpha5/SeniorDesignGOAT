<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rFrag"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dfrobot.angelo.blunobasicdemo.graphData.RespirationFragment">

        <EditText
            android:id="@+id/Redit_message"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter a value"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf ="@+id/respSend"
            android:layout_above="@+id/title"/>
        <Button
            android:id="@id/respSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_alignParentRight="true"
            android:layout_above="@id/title"/>
        <TextView
            android:id = "@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Breaths Per Min"
            android:gravity="center"
            android:textSize = "25dp"
            android:textStyle = "bold"
            android:layout_above="@+id/respRate"/>
        <TextView
            android:id = "@id/respRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Data"
            android:gravity="center"
            android:textSize = "25dp"
            android:textStyle = "bold"
            android:layout_above="@+id/respChart"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id = "@id/respChart"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
        </com.github.mikephil.charting.charts.LineChart>

</RelativeLayout>

